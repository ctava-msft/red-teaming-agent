# Azure AI Foundry Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=your-resource-group-here
AZURE_PROJECT_NAME=your-ai-foundry-project-name-here

# Azure Authentication
# Use Managed Identity in Azure (recommended) or DefaultAzureCredential locally
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here

# Storage Account (for logging results to Azure AI Foundry)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name-here

# Red Teaming Configuration
NUM_OBJECTIVES=10
RISK_CATEGORIES=violence,sexual,hate_unfairness,self_harm
OUTPUT_DIR=outputs

# Target Application Configuration
TARGET_ENDPOINT=https://your-target-endpoint.com/chat
TARGET_API_KEY=your-target-api-key-here

# Optional: Model Configuration (if scanning a base model)
MODEL_DEPLOYMENT_NAME=your-model-deployment-name
MODEL_ENDPOINT=https://your-endpoint.openai.azure.com/
MODEL_API_VERSION=2024-08-01-preview
